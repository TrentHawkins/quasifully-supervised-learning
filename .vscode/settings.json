{
//	Python code style linting:
	"python.linting.pycodestyleArgs":
	[
	// 	Freeform line width:
		"--max-line-length=132",
	// 	Use tabs instead of spaces and allow arbitrary line breaking around operators:
		"--ignore=E265,W191,W503,W504",
	],
	"python.linting.pycodestyleEnabled": true,

//	Make sure code user keeps using tabs instead of spaces:
	"editor.detectIndentation": true,

//	Enable unit testing
	"python.testing.unittestArgs": [
		"-v",
		"-s",
		".",
		"-p",
		"*test*.py",
	],
	"python.testing.pytestEnabled": false,
	"python.testing.unittestEnabled": true,
}